<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:GeradorMovimentoBTG.Models"
             xmlns:viewmodels="clr-namespace:GeradorMovimentoBTG.ViewModels"
             x:Class="GeradorMovimentoBTG.Views.BrownianMotionView"
             Title="Simulador de Movimento Browniano">

    <ContentPage.BindingContext>
        <viewmodels:BrownianMotionViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <models:BrownianMotionDrawable x:Key="BrownianMotionDrawable" />
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="VerticalOptions" Value="Center" />
        </Style>
        <Style TargetType="Entry">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="BackgroundColor" Value="White" />
        </Style>
    </ContentPage.Resources>

    <Grid BackgroundColor="#F0F0F0" Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Border Grid.Row="0" Grid.Column="0" 
                StrokeThickness="1" 
                BackgroundColor="Black"
                StrokeShape="RoundRectangle 5"
                Margin="5">
            <GraphicsView x:Name="brownianMotionGraph" 
                         Drawable="{StaticResource BrownianMotionDrawable}" 
                         HeightRequest="400"
                         WidthRequest="600"
                         HorizontalOptions="Fill" 
                         VerticalOptions="Fill" />
        </Border>

        <Border Grid.Row="0" Grid.Column="1"
                StrokeThickness="1"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 5"
                Margin="5">
            <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Parâmetros de Simulação" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />


                <VerticalStackLayout Spacing="5">
                    <Label Text="Preço inicial" />
                    <Grid ColumnDefinitions="*, Auto">
                        <Slider Value="{Binding InitialPrice}"
                                Minimum="10" 
                                Maximum="1000" 
                                Grid.Column="0" />
                        <Entry Text="{Binding InitialPrice}" 
                               Keyboard="Numeric"
                               WidthRequest="60" 
                               Grid.Column="1" />
                    </Grid>
                </VerticalStackLayout>


                <VerticalStackLayout Spacing="5">
                    <Label Text="Volatilidade média (%)" />
                    <Grid ColumnDefinitions="*, Auto">
                        <Slider Value="{Binding Volatility}"
                                Minimum="1" 
                                Maximum="100" 
                                Grid.Column="0" />
                        <Entry Text="{Binding Volatility}" 
                               Keyboard="Numeric"
                               WidthRequest="60" 
                               Grid.Column="1" />
                    </Grid>
                </VerticalStackLayout>


                <VerticalStackLayout Spacing="5">
                    <Label Text="Retorno médio (%)" />
                    <Grid ColumnDefinitions="*, Auto">
                        <Slider Value="{Binding MeanReturn}"
                                Minimum="-20" 
                                Maximum="20" 
                                Grid.Column="0" />
                        <Entry Text="{Binding MeanReturn}" 
                               Keyboard="Numeric"
                               WidthRequest="60" 
                               Grid.Column="1" />
                    </Grid>
                </VerticalStackLayout>


                <VerticalStackLayout Spacing="5">
                    <Label Text="Tempo (dias)" />
                    <Grid ColumnDefinitions="*, Auto">
                        <Slider Value="{Binding TimePeriod}"
                                Minimum="30" 
                                Maximum="1000" 
                                Grid.Column="0" />
                        <Entry Text="{Binding TimePeriod}" 
                               Keyboard="Numeric"
                               WidthRequest="60" 
                               Grid.Column="1" />
                    </Grid>
                </VerticalStackLayout>


                <VerticalStackLayout Spacing="5">
                    <Label Text="Número de simulações" />
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <Button Text="-" 
                                Command="{Binding DecrementSimulationsCommand}" 
                                WidthRequest="40"
                                Grid.Column="0" />
                        <Label Text="{Binding NumSimulations}" 
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Grid.Column="1" />
                        <Button Text="+" 
                                Command="{Binding IncrementSimulationsCommand}" 
                                WidthRequest="40"
                                Grid.Column="2" />
                    </Grid>
                </VerticalStackLayout>


                <Button Text="Gerar Simulação" 
                        Command="{Binding GenerateSimulationCommand}" 
                        BackgroundColor="#0077B6"
                        TextColor="White"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        HorizontalOptions="Fill"
                        VerticalOptions="End"
                        Margin="0,20,0,0" />
            </VerticalStackLayout>
            </ScrollView>
        </Border>


        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="10">
            <CollectionView ItemsSource="{Binding LineColors}" 
                           HorizontalOptions="Center">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="15" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="5">
                            <Rectangle Fill="{Binding}" 
                                     WidthRequest="20" 
                                     HeightRequest="10" 
                                     VerticalOptions="Center" />
                            <Label Text="Simulação" 
                                   Grid.Column="1" 
                                   VerticalOptions="Center" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        

        <Grid Grid.RowSpan="2" Grid.ColumnSpan="2"
              IsVisible="{Binding IsSimulating}"
              BackgroundColor="#80000000">
            <ActivityIndicator IsRunning="{Binding IsSimulating}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Color="White" />
        </Grid>
    </Grid>
</ContentPage>
